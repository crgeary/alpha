        "class-validator": "^0.13.2",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "helmet": "^5.1.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "ms": "^2.1.3",
        "multer": "^1.4.5-lts.1",
        "reflect-metadata": "^0.1.13",
