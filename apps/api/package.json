{
    "name": "@alpha/api",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "tsc --project tsconfig.production.json",
        "check-ts": "tsc --noEmit",
        "clean": "rm -r dist",
        "dev": "nodemon --exec 'ts-node' src/server.ts",
        "lint": "eslint",
        "test": "jest",
        "test:watch": "jest --watch",
        "db:schema:generate": "prisma generate --schema=./src/db/schema.prisma",
